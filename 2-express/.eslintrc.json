{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "ignorePackages"],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "prefer-const": "off", // ones here and below are specific to this project, ones above always useful
    "import/no-mutable-exports": "off",
    "no-import-assign": "off"
  }
}
